---
import type { GetStaticPaths } from "astro";
import PokemonCard from "../../components/pokemon/PokemonCard.astro";
import type { PokemonListResponse } from "../../interface/pokemon-list.response";
import MainLayout from "../../layouts/MainLayout.astro";

export const getStaticPaths = (async ({ paginate }) => {
  const resp = await fetch("https://pokeapi.co/api/v2/pokemon?limit=151");
  const { results } = (await resp.json()) as PokemonListResponse;

  return paginate(results, { pageSize: 20 });
}) satisfies GetStaticPaths;

const title = "Pokemon Static | Home";

const { page } = Astro.props;
---

<MainLayout title={title}>
  <h1 class="text-3xl">Listado de Pokemons</h1>
  <hr />
  <section
    aria-label="Listado de Pokémons"
    class="grid grid-cols-1 sm:grid-cols-3 md:grid-cols-5 gap-4"
  >
    {
      page.data.map((pokemon) => (
        <PokemonCard name={pokemon.name} url={pokemon.url} />
      ))
    }
  </section>

  <section class="flex px-10 mt-10 gap-2 items-center">
    <a
      href={page.url.prev ?? "#"}
      class:list={[
        "bg-blue-500 p-2 text-white rounded-md",
        {
          "bg-gray-600 text-gray-500 pointer-events-none": !page.url.prev,
        },
      ]}
    >
      Anteriores
    </a>

    <span class="text-lg font-semibold">Página {page.currentPage}</span>

    {}
    <a
      href={page.url.next}
      class:list={[
        "bg-blue-500 p-2 text-white rounded-md",
      ]}
    >
      Siguientes
    </a>
  </section>
</MainLayout>
