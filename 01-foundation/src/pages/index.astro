---
import MainLayout from "../layout/MainLayout.astro";
// Server Only
const name = "Mario Eduardo Sánchez Mejía";
const title = "Home Page";
---

<MainLayout title = 'Home Page'>
  <h1>Hola {name} desde astro</h1>

  <p>Momento actual: {new Date().toLocaleTimeString()}</p>
  <p id="current-time">Momento real: {new Date().toLocaleTimeString()}</p>


  <script>
    const currentTimeParagraph = document.querySelector(
      "#current-time"
    ) as HTMLParagraphElement;
    const currentYear: number = new Date().getFullYear();

    currentTimeParagraph.innerText = `Momento real: ${new Date().toLocaleTimeString()}`;
  </script>
</MainLayout>
